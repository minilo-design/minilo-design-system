{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],    // This tells TypeScript to resolve the @ alias to the root directory
      "@styles/*": ["styles/*"] 
    },
    "target": "es2016",
    "module": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve", // Change from "preserve" to "react-jsx"
    "noEmit": true,
    "incremental": true
  },
  "include": [
    "src",
    "src/pages"
  ],
  "exclude": [
    "node_modules"
  ]
}
